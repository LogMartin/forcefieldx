<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <baseDirectory>ffx-${project.version}</baseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>gpl-3.0.txt</include>
                <include>install.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <includes>
                <include>ffx</include>
                <include>ffxc</include>
                <include>ffx.bat</include>
                <include>ffxc.bat</include>
                <include>ffx-all.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>conf</directory>
        </fileSet>
        <fileSet>
            <directory>examples</directory>
        </fileSet>
        <fileSet>
            <directory>${basedir}</directory>
            <includes>
                <include>modules/algorithms/src/main/groovy/ffx/agorithms</include>
                <include>modules/autoparm/src/main/groovy/ffx/autoparm</include>
                <include>modules/binding/src/main/groovy/ffx/binding</include>
                <include>modules/potentials/src/main/groovy/ffx/potential</include>
                <include>modules/xray/src/main/groovy/ffx</include>
            </includes>
            <outputDirectory>scripts</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>