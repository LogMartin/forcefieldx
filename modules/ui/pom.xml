<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.kenai.ffx</groupId>
        <artifactId>ffx</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <groupId>com.kenai.ffx</groupId>
    <artifactId>ui</artifactId>
    <packaging>jar</packaging>
    <name>User Interfaces</name>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <configuration>
                    <extraJvmArguments>-Xms128M -Xmx1G</extraJvmArguments>
                    <programs>
                        <program>
                            <mainClass>ffx.Main</mainClass>
                            <name>ffx</name>
                        </program>
                        <program>
                            <mainClass>ffx.Main</mainClass>
                            <name>ffxh</name>
                        </program>
                    </programs>
                </configuration>
            </plugin>
            <!-- Make an assembly for Webstart -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>ffx</finalName>
                    <descriptors>
                        <descriptor>src/assemble/all.xml</descriptor>
                    </descriptors>
                    <outputDirectory>target/site</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>make-webstart-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>${basedir}/src/main/java/ffx/ui/commands
                </directory>
                <targetPath>ffx/ui/commands</targetPath>
                <includes>
                    <include>*.xml</include>
                    <include>*.dtd</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/java/ffx/ui/properties
                </directory>
                <targetPath>ffx/ui/properties</targetPath>
                <includes>
                    <include>*.*</include>
                </includes>
            </resource>
            <resource>
                <directory>${basedir}/src/main/java/ffx/ui/icons
                </directory>
                <targetPath>ffx/ui/icons</targetPath>
                <includes>
                    <include>*.png</include>
                    <include>*.gif</include>
                </includes>
            </resource>
        </resources>
    </build>

    <profiles>
        <!-- This profile should only be activated by commiters who can sign
        the artifacts. -->
        <profile>
            <id>ffx.jarsigner</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <!-- Sign the assembly (the verify phase is after the package phase) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jarsigner-plugin</artifactId>
                        <configuration>
                            <archive>target/site/ffx-all.jar</archive>
                            <alias>signFiles</alias>
                            <storepass>ForceFieldX</storepass>
                            <keypass>ForceFieldX</keypass>
                        </configuration>
                        <executions>
                            <execution>
                                <id>sign</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jdepend-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jxr-plugin</artifactId>
                <configuration>
                    <linkJavadoc>true</linkJavadoc>
                    <javadocDir>${project.reporting.outputDirectory}/apidocs</javadocDir>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-project-info-reports-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>

    <dependencies>
        <dependency>
            <groupId>com.kenai.ffx</groupId>
            <artifactId>algorithms</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.kenai.ffx</groupId>
            <artifactId>potentials</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.kenai.ffx</groupId>
            <artifactId>utilities</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>1.7.0</version>
        </dependency>
        <dependency>
            <groupId>macosx</groupId>
            <artifactId>AppleJavaExtensions</artifactId>
            <type>jar</type>
            <version>1.3</version>
        </dependency>
        <dependency>
            <groupId>javax.help</groupId>
            <artifactId>javahelp</artifactId>
            <type>jar</type>
            <version>2.0.02</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <type>jar</type>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <type>jar</type>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <type>jar</type>
            <version>1.6</version>
        </dependency>
    </dependencies>

</project>
