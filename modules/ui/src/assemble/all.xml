<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>all</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>${artifact.groupId}/${artifact.artifactId}${dashClassifier?}.jar
            </outputFileNameMapping>
            <unpack>false</unpack>
            <scope>compile</scope>
            <useTransitiveDependencies>true</useTransitiveDependencies>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/classes/ffx</directory>
            <includes>
                <include>Main.class</include>
                <include>FFXClassLoader.class</include>
            </includes>
            <outputDirectory>ffx</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>