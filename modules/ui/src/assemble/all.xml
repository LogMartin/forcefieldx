<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
          http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>all</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/*</exclude>
                </excludes>
            </unpackOptions>
            <outputFileNameMapping>${artifact.groupId}/${artifact.artifactId}.jar</outputFileNameMapping>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/target/classes/ffx</directory>
            <includes>
                <include>Launcher.class</include>
                <include>FFXClassLoader.class</include>
            </includes>
            <outputDirectory>ffx</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../bin/jogl</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>jogl</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../bin/jogl-32</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>jogl-32</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../bin/jogl-64</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>jogl-64</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../bin/jcuda-64</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>jcuda-64</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../scripts</directory>
            <includes>
                <include>*.ffx</include>
            </includes>
            <outputDirectory>ffx/scripts</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../patches</directory>
            <includes>
                <include>*.patch</include>
            </includes>
            <outputDirectory>ffx/patches</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>