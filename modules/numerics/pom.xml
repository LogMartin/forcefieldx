<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.kenai.ffx</groupId>
        <artifactId>ffx</artifactId>
        <version>1.0.0-alpha</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <groupId>com.kenai.ffx</groupId>
    <artifactId>numerics</artifactId>
    <packaging>jar</packaging>
    <name>Numerics</name>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/java/ffx/numerics/fft
                </directory>
                <targetPath>ffx/numerics/fft</targetPath>
                <includes>
                    <include>*.cu*</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.2.1</version>
                <inherited>false</inherited>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>java</executable>
                    <arguments>
                        <argument>-d64</argument>
                        <argument>-ms4G</argument>
                        <argument>-mx4G</argument>
                        <argument>-verbose</argument>
                        <argument>-Djava.library.path='/home/schnied/ffx/bin/64-bit'</argument>
                        <argument>-classpath</argument>
                        <argument>target/numerics-${project.version}.jar:${settings.localRepository}/commons-io/commons-io/2.1.0/commons-io-2.1.0.jar:${settings.localRepository}/jcuda/jcuda-all/4.0.0/jcuda-all-4.0.0.jar:${settings.localRepository}/edu/rit/pj/pj/1.5/pj-1.5.jar</argument>
                        <argument>ffx.numerics.fft.Complex3DCuda</argument>
                        <argument>128</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>commons-math</groupId>
            <artifactId>commons-math</artifactId>
            <type>jar</type>
            <version>2.2</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <type>jar</type>
            <version>2.1.0</version>
        </dependency>
        <dependency>
            <groupId>edu.rit.pj</groupId>
            <artifactId>pj</artifactId>
            <type>jar</type>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>jcuda</groupId>
            <artifactId>jcuda-all</artifactId>
            <type>jar</type>
            <version>4.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.jogamp</groupId>
            <artifactId>jocl</artifactId>
            <type>jar</type>
            <version>0.9.0</version>
        </dependency>
    </dependencies>
</project>
